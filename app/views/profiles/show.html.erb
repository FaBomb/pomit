                </div>
            </div>
        </div>
    <!-- メインコンテンツ -->
        <div class="topic">
            <% if @profile.header_image? %>
                <%= image_tag @profile.header_image.to_s, alt:"ヘッダー", id:"headImg", class:"head_img" %>
            <% else %>
                <%= image_tag "no-img.png", alt:"画像なし", class:"head_img" %>
            <% end %>
            <div class="back">
                <div class="prof">
                    <div class="my_img">
                        <form action="" method="post" class="icon">
                            <label>
                                <% if @profile.icon? %>
                                    <%= image_tag @profile.icon.to_s, alt:"ユーザーアイコン" %>
                                <% else %>
                                    <%= image_tag "no-img.png", alt:"画像なし", class:"result-img" %>
                                <% end %>
                            </label>
                        </form>
                        <form action="" method="post" class="name">
                            <p>
                                <%= @profile.name %>
                            </p>
                        </form>
                    </div>
                    <div class="prof_ex">
                        <h3>PROFILE</h3>
                        <div class="prof_text">
                            <form action="" method="post" class="univ">
                                <p>
                                    <span class="prof_span">大学名：&nbsp;</span><%= @profile.univercity %>
                                </p>
                            </form>
                            <form action="" method="post" class="hobby">
                                <p>
                                    <span class="prof_span">趣味　：&nbsp;</span><%= @profile.hobby %>
                                </p>
                            </form>
                            <form action="" method="post" class="special">
                                <p>
                                    <span class="prof_span">特技　：&nbsp;</span><%= @profile.my_special %>
                                </p>
                            </form>
                            <form action="" method="post" class="twitter_url">
                                <p>
                                    　<span class="prof_span"><i class="fab fa-twitter-square"></i>　：&nbsp;</span><%=link_to @profile.twitter %>
                                </p>
                            </form>
                            <form action="" method="post" class="facebook_url">
                                <p>
                                    　<span class="prof_span"><i class="fab fa-facebook-square"></i>　：&nbsp;</span><%=link_to @profile.facebook %>
                                </p>
                            </form>
                            <form action="" method="post" class="insta_url">
                                <p>
                                    　<span class="prof_span"><i class="fab fa-instagram-square"></i>　：&nbsp;</span><%=link_to @profile.insta %>
                                </p>
                            </form>
                            
                            
                        </div>
                    </div>
                </div>
                <div class="intro">
                    <h3>ABOUT ME</h3>
                    <div class="box">
                        <div class="about_box">
                            <p>
                                <%= safe_join(@profile.about.to_s.split("\n"), tag(:br)) %>
                            </p>
                        </div>
                    </div>
                    <h3>SPECIALTY</h3>
                    <div class="box">
                        <% @explains.each do |t| %>
                            <% if t.specialty_title? or t.specialty_detail? %>
                                <div class="special_box">
                                    <h5>
                                        <%= safe_join(t.specialty_title.to_s.split("\n"), tag(:br)) %>
                                    </h5>
                                    <p>
                                        <%= safe_join(t.specialty_detail.to_s.split("\n"), tag(:br)) %>
                                    </p>
                                </div>
                            <% end %>
                        <% end %>
                    </div>
                
                    <h3>SKILL/TOOL</h3>
                    <div class="box">
                        <% @explains.each do |t| %>
                            <% if t.skill_title? or t.skill_detail? %>
                                <div class="skill_box">
                                    <h5>
                                        <%= safe_join(t.skill_title.to_s.split("\n"), tag(:br)) %>
                                    </h5>
                                    <p>
                                        <%= safe_join(t.skill_detail.to_s.split("\n"), tag(:br)) %>
                                    </p>
                                </div>
                            <% end %>
                        <% end %>
                    </div>
                    <h3>QUALIFICATION</h3>
                    <div class="box">
                        <% @explains.each do |t| %>
                            <% if t.qualification_title? or t.qualification_detail? %>
                                <div class="qual_box">
                                    <h5>
                                        <%= safe_join(t.qualification_title.to_s.split("\n"), tag(:br)) %>
                                    </h5>
                                    <p>
                                        <%= safe_join(t.qualification_detail.to_s.split("\n"), tag(:br)) %>
                                    </p>
                                </div>
                            <% end %>
                        <% end %>
                    </div>
                    <h3>PORTFOLIO</h3>
                    <div class="box">
                        <% @explains.each do |t| %>
                            <% if t.folio_image? or t.folio_title? or t.folio_detail? %>
                                <div class="folio_box">
                                    <% if t.folio_image? %>
                                        <%= image_tag t.folio_image.to_s, alt:"ポートフォリオ", width:"200px", height:"140px" %>
                                    <% else %>
                                        <%= image_tag "no-img.png", alt:"画像なし", class:"head_img" %>
                                    <% end %>
                                    <div class="folio_content">
                                        <h5>
                                            <%= safe_join(t.folio_title.to_s.split("\n"), tag(:br)) %>
                                        </h5>
                                        <p>
                                            <%= safe_join(t.folio_detail.to_s.split("\n"), tag(:br)) %>
                                        </p>
                                    </div>
                                </div>
                            <% end %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
        <!-- フッター -->
