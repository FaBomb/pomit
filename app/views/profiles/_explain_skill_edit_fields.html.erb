<div class = "nested-fields"> 
    <% if f.object.skill_title? or f.object.skill_detail? %>
        <div class="field">
            <%= f.text_area :skill_title, wrap:"hard", class:"title_form", :placeholder => "得意なスキル/ツールを記入してください" %>
            <%= f.text_area :skill_detail, wrap:"hard", class:"detail_form", :placeholder => "詳細を記入してください" %>
        </div>
        <%= link_to_remove_association '-',f %>
    <% end %>
</div>

