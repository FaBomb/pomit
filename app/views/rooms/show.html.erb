<script>
    $(function(){        
        $('.nav_toggle').on('click', function () {
            $('.nav_toggle, .nav, .sidebar, .topic, .back, .head_img, .message_form').toggleClass('show');
        });
    });
    $("#messages").prop({ scrollTop: $("#messages").prop("scrollHeight") });
    
</script>